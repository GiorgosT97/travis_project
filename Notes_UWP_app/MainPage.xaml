<Page
    x:Class="Notes_UWP_app.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Notes_UWP_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">
        <Image x:Name="travis_face"  Source="Assets/travis_face.jpg" Margin="587,120,10,0"    />
        <Canvas x:Name="VisualizationCanvas" Visibility="Visible" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,0,-4,0" Loaded="Starting_Function">
            <TextBox  Header="Input"  FontSize="30" PlaceholderText="Write input"  Canvas.Left="10" Height="471" Width="552"  TextChanged="TextBox_TextChanged" Canvas.Top="177" Text=""  />
            <Button Content="Repeat" Background= "IndianRed" Click="OnClick" HorizontalAlignment= "Center" VerticalAlignment="Bottom" Height="120" Width="250"/>
            <CheckBox IsChecked="True" Content="Answering Mode" Canvas.Left="1280" Height="35" Width="210" Checked="CheckBox_Checked" Unchecked="CheckBox_NotChecked" Canvas.Top="45"/>
            <Button Content="Voice Recognition" Click="Speech_Recognition" Background= "Blue" Margin="0,0,0,0" HorizontalAlignment= "Center" VerticalAlignment="Bottom" Height="120" Width="250" Canvas.Left="312"/>

        </Canvas>

    </Grid>
</Page>
